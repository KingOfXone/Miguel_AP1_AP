@page "/P_Aportes"
@using Microsoft.EntityFrameworkCore.Metadata.Internal;
@using Miguel_AP1_AP.BLL;
@using Miguel_AP1_AP.DAL;
@model Miguel_AP1_AP.Pages.Consultas.IndexModel
@inject AportesBll aportesBll

<EditForm Model="Aportes">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header text-center">
            <h3>Consulta de Aportes</h3>

        </div>

        <div class="card-body">
            <form>
                <div class="form-group text-center">

                    <button type="button" class="bi bi-file-earmark-person btn btn-lg btn-primary" @onclick="Buscar"> Generar Tabla </button>

                </div>
            </form>
        </div>
        <table class="table table-secondary">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>AportesID</th>
                    <th>Persona</th>
                    <th>Monto</th>
                    <th>Ver</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aportes in aportes)
                {
                    <tr>
                        <td>@aportes.AportesId</td>
                        <td>@aportes.Titulo</td>
                        <td>@aportes.Precio</td>
                        <th>@aportes.Fecha</th>
                        <td><a href="aportes/@aportes.AportesId">Ver</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@code {

    public Aportes aportes { set; get; } = new Aportes();
    public List<Aportes> Aportes { get; set; } = new List<Aportes>();
    public void Buscar() => Aportes = AportesBll.GetList(o => true);

}
